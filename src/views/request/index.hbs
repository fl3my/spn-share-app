<h1 class="mt-3">Your requests</h1>
<div class="rounded shadow bg-light p-3">
  {{#if requests}}
    <table class="table table-light">
      <thead>
        <tr>
          <th>Date Requested</th>
          <th>Donation Item</th>
          <th>Status</th>
          <th>Delivery Method</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each requests}}
          <tr>
            <td>{{formatDate this.dateRequested "DD MM YYYY"}}</td>
            <td>
              <a
                href="/shop/{{this.donationItem._id}}"
              >{{this.donationItem.measurement.value}}
                {{this.donationItem.measurement.type}}
                {{this.donationItem.name}}</a></td>
            <td>{{this.status}}</td>
            <td>{{this.deliveryMethod}}</td>
            <td>
              <a href="/requests/{{this._id}}/cancel">Cancel</a>
              <a href="/requests/{{this._id}}">Show</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <p>You haven't made any requests yet</p>
  {{/if}}
</div>