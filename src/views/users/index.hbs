<h1 class="mt-3">All users</h1>
<div class="rounded shadow bg-light p-3">
  {{#if users}}
    <table class="table table-light">
      <thead>
        <tr>
          <th>Email</th>
          <th>Role</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each users}}
          <tr>
            <td>{{this.email}}</td>
            <td>{{this.role}}</td>
            <td>
              <a href="/users/{{this._id}}/edit">Edit</a>
              <a href="/users/{{this._id}}/delete">Delete</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <p>No users found</p>
  {{/if}}
  <a href="/users/new">Create a new user</a>
</div>